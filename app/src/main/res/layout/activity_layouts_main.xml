<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layouts.MainActivityLayouts">



    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorSecondary"
        android:fontFamily="sans-serif"
        android:text="Layouts"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
       android:id="@+id/subtitle"
        android:layout_width="313dp"
        android:layout_height="28dp"
        android:fontFamily="sans-serif"
        android:text="choisissez un type de layouts"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153" />

    <Button
        android:id="@+id/relativelayouts"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:text="RelativeLayout"
        android:textSize="12dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/gridlayouts"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:text="GridLayout"
        android:textSize="12dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativelayouts"
        app:layout_constraintVertical_bias="0.08"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/linearlayout"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginBottom="124dp"
        android:text="LinearLayout"
        android:textSize="12dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridlayouts"
        app:layout_constraintVertical_bias="0.135" />

    <Button
        android:id="@+id/constraintlayout"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:text="ConstraintLayout"
        android:textSize="12dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout"
        app:layout_constraintVertical_bias="0.116"
        android:onClick="onClickShowConstraintLayoutToast"/>

</androidx.constraintlayout.widget.ConstraintLayout>